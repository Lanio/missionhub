<% if mhub? %>
  <% if @survey %>
    <% provide :head do %>
      <%= render 'survey_responses/survey_head' %>
    <% end %>
    <% if @survey.logo_file_name.present? %>
      <%= image_tag(@survey.logo.url(:small), class: 'logo') %>
    <% end %>
  <% end %>
  <center>
    <% if !@survey || [0, 1].include?(@survey.login_option) %>
      <div id="login_paragraph"><h1><%=raw @survey && @survey.login_paragraph.present? ?  @survey.login_paragraph : t('.login_paragraph_mhub') %></h1></div>
      <br><br>
      <%= link_to(image_tag('facebookconnect.png'), '/users/auth/facebook_mhub', id: 'facebook_button', rel: 'external', style: cookies[:survey_mode].present? ? 'display:none' : '' ) %>
      <% if cookies[:survey_mode].present? %>
        <span id="waiting"><%= t('.waiting_for_logout') %></span>
      <% end %>
      <br/>
      <% if @survey && @survey.login_option == 0 %>
        <div class="info"><br/><br/>
          <center>
            <%= t('.dont_like_facebook') %>
            <%= link_to(t('.skip_facebook'), session[:return_to] ? add_params(session[:return_to], :nologin => true) :
                        "/s/#{@survey.id}?nologin=true") %>
          </center>
        </div>
      <% end %>
    <% end %>
  </center>
<% else %>
  <% body_classes "welcome sessions new" %>

  <h1><%= t('.login_welcome') %></h1>
  <p><%= t('.login_instructions') %></p>

  <p class="error_container"><%= raw(flash[:error]) %></p>

  <%= link_to t('.login_facebook_button'), '/users/auth/facebook', rel: 'external', class: "facebook" %>
  <%= link_to t('.login_cancel'), root_path, class: "cancel" %>
<% end %>