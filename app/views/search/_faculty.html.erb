<% conditions = params[:faculty].present? %>
<div class="side-search-option singleton checkboxes_only" data-id="side_search_faculty" data-type="Standard" data-value="<%= params[:faculty] %>">
  <%= render "search/toggler" %>
  <div class="title"><%= t('.title') %></div>
  <div class="fields_active">
    <% {"yes" => 1, "no" => 0}.each do |k, v| %>
      <% if conditions && params[:faculty].include?("#{v}") %>
        <div class="option checkbox">
          <%= check_box_tag "faculty[]", "#{v}", true, id: "search_faculty_#{v}", class: "search_faculty" %>
          <div class="sidebar-label"><%= k.titleize %></div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="fields">
    <% {"yes" => 1, "no" => 0}.each do |k, v| %>
      <% unless conditions && params[:faculty].include?("#{v}") %>
        <div class="option checkbox">
          <%= check_box_tag "faculty[]", "#{v}", false, id: "search_faculty_#{v}", class: "search_faculty" %>
          <div class="sidebar-label"><%= k.titleize %></div>
        </div>
      <% end %>
    <% end %>
    <%= render "search/actions", clear: conditions %>
  </div>
</div>